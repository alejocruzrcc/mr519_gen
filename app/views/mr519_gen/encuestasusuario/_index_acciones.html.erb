<% if can?(:edit, registro) %>
  <%= link_to t('.responder', :default => t("helpers.links.responer")),
    edit_modelo_path(registro), :class => 'btn btn-sm' %>
<% end %>
<%= render partial: 'index_mas_acciones', locals: {f: f, registro: registro} %>
<% if can?(:destroy, registro) %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
    modelo_path(registro),
    :method => :delete,
    :data => { 
      :confirm => 
      t('.confirm', :default => 
        t("helpers.links.confirm", 
          :default => 'Are you sure?'
         )
       ) 
    },
    :class => 'btn btn-sm btn-danger' %>
<% end %>
